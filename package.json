{
  "name": "electron-react-esbuild",
  "version": "0.0.0",
  "description": "An Electron boilerplate",
  "license": "MIT",
  "author": "sprout2000",
  "main": "dist/main.js",
  "scripts": {
    "predev": "rimraf dist",
    "dev": "run-p dev:*",
    "dev:esbuild": "cross-env NODE_ENV=\"development\" ts-node ./esbuild.ts",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && cross-env NODE_ENV=\"development\" electron .",
    "build": "cross-env NODE_ENV=\"production\" ts-node ./esbuild.ts",
    "package": "ts-node ./builder.ts"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@craftamap/esbuild-plugin-html": "^0.4.0",
    "@types/node": "^18.7.6",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "cross-env": "^7.0.3",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.8.6",
    "esbuild": "^0.15.5",
    "esbuild-sass-plugin": "^2.3.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  }
}
